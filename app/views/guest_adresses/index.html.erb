<% @guests = Guest.all %>
<% @guest_adresess = GuestAdress.all %>


  <table class = "table">
    <thead>
      <tr>
        <th scope="col">Name </th>
        <th scope="col">Surname </th>
        <th scope="col">Adress </th>
        <th scope="col">Telephone</th>
      </tr>
    </thead>
    <tbody>
    <% @guest_adresess.each do |adress| %>
    <% guest = Guest.find_by(id: adress.guest_id) %>
      <tr>
        <td > <%= guest.name %> </td>
        <td > <%= guest.surname %> </td>
        <td > <%= adress.street %>  <%= adress.home_number %>  <%= adress.town %>  <%= adress.code %> <%= adress.state %> </td>
        <td > <%= adress.telephone %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
