<% @example_attendance = EventAttendance.first %>
<% @event_attendance = EventAttendance.first %>

<% @event_attendance_statuses = EventAttendanceStatus.all %>
<%= form_for @event_attendance do |f| %>
  <%= f.hidden_field :event_attendance_id, value: @example_attendance.id %>
  <%= f.collection_select :event_attendance_status_id, @event_attendance_statuses ,:id, :eastatus , include_blank: false  %>

  <%= f.hidden_field :event_attendance_id, value: @event_attendance.event_id %>
  <%= f.submit "save" %>
<% end %>
