<table class="table">
  <thead>
        <tr>
          <th scope="col">Imię </th>
          <th scope="col">Nazwisko </th>
          <th scopr="col">Ilość kompanów </th>
          <th scope ="col"> Save </th>

        </tr>
  </thead>
  <tbody>
      <% @guests.each do |guest| %>
        <tr>
          <td> <%= guest.name %> </td>
          <td> <%= guest.surname %> </td>
          <% @companion = Companion.find_by(guest_id: guest.id)%>
          <%= form_for  @companion, url: {action: "update_accompaning_people"}, method: :post do |f| %>
              <td><%= f.collection_select :companion_number_id, @companion_numbers ,:id, :number , include_blank: false %> </td>
                  <%= f.hidden_field :companion_id, value: @companion.id %>
              <td><%= f.submit "save" %> </td>
          <% end %>
        </tr>
      <% end %>
  </tbody>
</table>
