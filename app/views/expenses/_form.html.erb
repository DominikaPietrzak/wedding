<table class = "table">
  <thead>
    <tr>
      <th scope = "col"> Dodaj nową usługę </th>
    </tr>
  </thead>
  <tbody>
      <%= form_for @expense do |f| %>
      <tr>
        <th scope = "col"> Nazwa</th>
        <th scope = "col">Ostateczny czas zapłaty </th>
        <th scope = "col"> Koszt </th>
        <th scope = "col"> Ilość </th>
        <th scope = "col"> Czyj koszt </th>
        <th scope = "col"> Jakie wydarzenie</th>
      </tr>
      <tr>
        <td><%= f.text_field :name %></td>
        <td><div class='input-group date' id='datetimepicker3'>
            <%= f.text_field :paydeadline %>
            <span class="input-group-addon">
                <span class="glyphicon glyphicon-calendar"></span>
            </span></div> </td>
        <td><%= f.text_field :cost %></td>
        <td><%= f.text_field :amount %></td>
        <td><%= f.collection_select :newlywed_id, @newlyweds ,:id, :name , include_blank: false %> </td>
        <td><%= f.collection_select :event_id, @events ,:id, :name , include_blank: false %> </td>
      </tr>

      <td><%= f.submit %></td>

    <% end %>
  </tbody>
</table>

<script type="text/javascript">
  $(function () {
      $('#datetimepicker3').datetimepicker({
        format: 'DD-MM-YYYY hh:mm'
      });
  });
</script>
