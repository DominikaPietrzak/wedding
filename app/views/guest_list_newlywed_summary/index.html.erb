<h2>Guest for each newlywed  </h2>
<% @newlyweds.each do |newlywed| %>
  <h3> <%= newlywed.name %> </h3> </br>
  <% yes_status_id = GuestListStatus.find_by(status: "yes") %>
  <% @newlywed_guest_lists = NewlywedGuestList.where(guest_list_status_id: yes_status_id, newlywed_id: newlywed.id) %>
  <table class="table">
    <thead>
    <tr>
      <th scope = "col"> ImiÄ™ </th>
      <th scope = "col"> Nazwisko </th>
    </tr>
  </thead>
  <tbody>
  <%  @newlywed_guest_lists.each do |glist| %>
    <% guest = Guest.find_by(id: glist.guest_id) %>
    <tr>
      <td><%= guest.name %></td>
      <td><%= guest.surname %></td>
    </tr>
  <% end %>
  <tr>
    <td></td>
    <td> <%=  @newlywed_guest_lists.count %></td>
  </tr>
  </br>
</table>
<% end %>
