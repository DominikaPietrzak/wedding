<% @events.each do |event| %>
  <% @statuses.each do |status| %>
    <h3> <%= event.name %> </h3>
    <h4> <%= status.status %> </h4>
      <table class ="table">
        <thead>
          <tr>
            <th> ImiÄ™ </th>
            <th> Nazwisko </th>
          </tr>
        </thead>
        <tbody>
          <% @ea_confirmations = EaGuestConfirmation.where(guest_confirmation_status_id: status.id, event_id: event.id) %>
          <% @ea_confirmations.each do |confirmation| %>
            <% @guest = confirmation.guest %>
              <tr>
                <td><%= @guest.name %></td>
                <td><%= @guest.surname %></td>
              </tr>
          <% end %>
          <tr>
            <td>Podsumowanie</td>
            <td><%= @ea_confirmations.count %></td>
          </tr>
        </tbody>
      </table>
  <% end %>
<% end %>
